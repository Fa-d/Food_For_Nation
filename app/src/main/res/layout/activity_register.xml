<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Register"
            android:textColor="#3A0F0F"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_full_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/user_name_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Useranme"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/enter_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/mail_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/user_website_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/user_landline_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Landline no"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/user_mobile_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/user_address_inputed_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:paddingTop="20dp" />

        <EditText
            android:id="@+id/user_zip_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ZIP"
            android:paddingTop="20dp" />
        <EditText
            android:id="@+id/user_self_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A little description about yourself"
            android:paddingTop="20dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owe any Company ?? " />

                <RadioButton
                    android:id="@+id/radioYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radioNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="No" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Spinner
                android:id="@+id/region_spinner_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".5" />

            <Spinner
                android:id="@+id/city_spinner_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".5" />

        </LinearLayout>
        <Button
            android:id="@+id/the_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="Register" />
    </LinearLayout>


</ScrollView>